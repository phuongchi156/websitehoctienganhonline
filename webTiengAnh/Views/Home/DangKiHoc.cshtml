


@model webTiengAnh.Models.entity.HocSinh
@{
    ViewBag.Title = "Đăng kí học";
}
<div class="align-content-xl-between">
    <h2>ĐĂNG KÍ KHÓA HỌC CHO HỌC SINH</h2>

    @using (Html.BeginForm("DangKi", "Home"))
    {
        @Html.AntiForgeryToken()

        @*<div class="form-horizontal">*@
        <h4>Mời bạn điền thông tin</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <table>
                <tr>
                    <td>@Html.Label("Họ và tên học sinh")</td>
                    <td>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TenHS)
                            @Html.ValidationMessageFor(model => model.TenHS)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>@Html.Label("Ngày Sinh")</td>
                    <td>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NgaySinh)
                            @Html.ValidationMessageFor(model => model.NgaySinh)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>@Html.Label("Giới Tính")</td>
                    <td>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.GioiTinh)
                            @Html.ValidationMessageFor(model => model.GioiTinh)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>@Html.Label("Địa Chỉ")</td>
                    <td>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DiaChi)
                            @Html.ValidationMessageFor(model => model.DiaChi)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>@Html.Label("Tên phụ huynh")</td>
                    <td>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PhuHuynh)
                            @Html.ValidationMessageFor(model => model.PhuHuynh)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>@Html.Label("Số Điện Thoại")</td>
                    <td>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SDT)
                            @Html.ValidationMessageFor(model => model.SDT)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>@Html.Label("UserName")</td>
                    <td>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.UserName)
                            @Html.ValidationMessageFor(model => model.UserName)
                        </div>
                    </td>
                <tr>
                    <td>@Html.Label("Password")</td>
                    <td>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PassWord)
                            @Html.ValidationMessageFor(model => model.PassWord)
                        </div>
                    </td>
                </tr>
                </tr>
            </table>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Đăng kí" class="btn btn-default" />
            </div>
        </div>
        @*</div>*@
    }
</div>
<div>
    @Html.ActionLink("Quay lại trang chủ", "Index")
</div>



